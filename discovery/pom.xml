        <module>src/features/net.w3des.extjs.core.extjs4_1_1gpl.feature</module>
        <module>src/features/net.w3des.extjs.core.extjs4_1_1agpl.feature</module>
        <module>src/features/net.w3des.extjs.core.extjs4_2_0gpl.feature</module>
        <module>src/features/net.w3des.extjs.core.extjs4_2_1gpl.feature</module>
        <module>src/features/net.w3des.extjs.core.extjs5_0_0gpl.feature</module>
        <module>src/plugins/net.w3des.extjs.core.touch2_3_0gpl</module>
        <module>src/plugins/net.w3des.extjs.core.touch2_3_1gpl</module>
        <module>src/plugins/net.w3des.extjs.core.touch2_3_1agpl</module>
        <module>src/features/net.w3des.extjs.core.touch_2_3_0gpl.feature</module>
        <module>src/features/net.w3des.extjs.core.touch_2_3_1gpl.feature</module>
        <module>src/features/net.w3des.extjs.core.touch_2_3_1agpl.feature</module>
        <module>plugins/net.w3des.extjs.core.discovery</module>
    </modules>
</project>
